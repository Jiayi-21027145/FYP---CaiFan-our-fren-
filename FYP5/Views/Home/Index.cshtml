        <script>
            // Function to update QR code size
            function updateQRCodeSize() {
                var qrcodeContainer = document.getElementById("qrcode");
                var newSize = Math.min(qrcodeContainer.offsetWidth, qrcodeContainer.offsetHeight);

                // Clear existing QR code before generating a new one
                qrcodeContainer.innerHTML = '';

                var qrcode = new QRCode(qrcodeContainer, {
                    text: "http://www.instagram.com/_jiakpng_",
                    width: newSize,
                    height: newSize,
                });
            }

            // Call the function on window resize and orientation change
            window.addEventListener("resize", updateQRCodeSize);
            window.addEventListener("orientationchange", updateQRCodeSize);

            // Initial call to set the size on page load
            window.addEventListener("load", updateQRCodeSize);
        </script>
        
