@model ChangePw

@{
    Layout = "_CaiFan";
}
<link href="~/css/profile.css" rel="stylesheet" />
<h2>Change Password</h2>
@*<p3> Enter your new password. Once success and updated, please go to the login page to re-enter your new password for login</p3>*@

<style>
    body {
        background: url('@(Url.Content("~/DG Userpage.jpg"))') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<div class="col-sm-10">
    @if (ViewData["Msg"] != null)
    {
        <div class="mb-3">
            <div class="alert alert-secondary">
                <text>@ViewData["Msg"]</text>
            </div>
        </div>
    }
    <div class="link" style="margin-bottom: 20px;">
        <div>
            Enter your new password. Once success, please go to the login page
        </div>
    </div>


    <form asp-controller="Account" asp-action="ChangePwd" method="post">

        <div class="row mb-2">
            <label asp-for="CurrentPwd" class="col-sm-2 col-form-label fw-bold">
                Current Password:
            </label>
            <div class="col-sm-5">
                <input asp-for="CurrentPwd" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="CurrentPwd"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2">
            <label asp-for="NewPwd" class="col-sm-2 col-form-label fw-bold">
                New Password:
            </label>
            <div class="col-sm-5">
                <input asp-for="NewPwd" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="NewPwd"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2">
            <label asp-for="ConfirmPwd" class="col-sm-2 col-form-label fw-bold">
                Confirm Password:
            </label>
            <div class="col-sm-5">
                <input asp-for="ConfirmPwd"
                       class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="ConfirmPwd"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2">
            <div class="offset-sm-2 col-sm-10">
                <input type="submit" value="Update"
                       class="btn btn-sm btn-primary" />
            </div>
        </div>

    </form>
</div>

