@model JiakUser

@{
    Layout = "_CaiFan";
}

<div class="container">

    <div class="my-3">
        <h2>Reset password</h2>
    </div>

    <form method="post"
          asp-controller="Account" asp-action="ResetPassword">

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="UserPw" class="form-control"
                   placeholder="UserPw" />
            <label asp-for="UserPw">New password</label>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="UserPw" class="form-control"
                   placeholder="UserPw" />
            <label asp-for="UserPw">Confirm Password</label>
            <span asp-validation-for="UserPw" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="mb-3">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="col-6">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <b>Message: </b>@ViewData["Message"]<br />
                        @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                        {
                            <b>SQL: </b>

                            @ViewData["ExecSQL"]?.ToString()
                        }
                    </div>
                </div>
            </div>
        }

    </form>
</div>
