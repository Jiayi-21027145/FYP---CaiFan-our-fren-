@model JiakUser

@{
    Layout = "_CaiFan";
}
<link href="~/css/profile.css" rel="stylesheet" />
<h2>Reset Password</h2>

<div class="col-sm-10">
    @if (ViewData["Msg"] != null)
    {
        <div class="mb-3">
            <div class="alert alert-secondary">
                <text>@ViewData["Msg"]</text>
            </div>
        </div>
    }

    <form asp-controller="Account" asp-action="ResetPassword" method="post">

        <div class="form-group">
            <label asp-for="UserPw" class="col-sm-2 col-form-label fw-bold">
                New Password:
            </label>
            <input asp-for="UserPw" class="form-control" />
            <span asp-validation-for="UserPw" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserPw2" class="col-sm-2 col-form-label fw-bold">
                Confirm Password:
            </label>
            <input asp-for="UserPw2" class="form-control" />
            <span asp-validation-for="UserPw2" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Reset Password</button>

    </form>
</div>
