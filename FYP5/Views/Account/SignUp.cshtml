@model JiakUser

@{
    Layout = "_CaiFan";
}

<div class="container">

    <div class="my-3">
        <h2>Sign Up to Jiakpng</h2>
    </div>

    <form method="post" asp-controller="Account" asp-action="SignUp">

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="UserId" class="form-control"
                   placeholder="UserId" />
            <label asp-for="UserId">User Id</label>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="UserName" class="form-control"
                   placeholder="UserName" />
            <label asp-for="UserName">UserName</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        
        <div class="col-md-6 mb-3 form-floating">
            <div class="form-control border-0 ">
                <label class="control-label">Gender :</label>
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input"
                           id="male" name="Gender" value="Male" />
                    <label class="form-check-label" for="male">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input"
                           id="female" name="Gender" value="Female" />
                    <label class="form-check-label" for="female">Female</label>
                </div>
            </div>
            
        </div>

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="Email" class="form-control"
                   placeholder="Email" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="UserPw" class="form-control"
                   placeholder="UserPw" />
            <label asp-for="UserPw">Password</label>
            <span asp-validation-for="UserPw" class="text-danger"></span>
        </div>
        
        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="UserPw2" class="form-control"
                   placeholder="UserPw2" />
            <label asp-for="UserPw2">Confirm password</label>
            <span asp-validation-for="UserPw2" class="text-danger"></span>
        </div>

        <div class="col-auto mb-3">
            <button class="btn btn-primary" type="submit">Sign Up</button>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="col-6">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <b>Message: </b>@ViewData["Message"]<br />
                        @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                        {
                            <b>SQL: </b>

                            @ViewData["ExecSQL"]?.ToString()
                        }
                    </div>
                </div>
            </div>
        }
    </form>

</div>
