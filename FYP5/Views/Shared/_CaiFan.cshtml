<!DOCTYPE html>
<html>
<head>
    <meta charset="ut-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/profile.css">
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/chartjs/Chart.min.js"></script>

    @RenderSection("MoreScripts", false)
    @RenderSection("Scripts", false)



    @{
        var pageTitle = "Jiakpng";
        if (ViewData["Title"] != null)
        {
            pageTitle += " - " + ViewData["Title"];
        }
    }
    <title>@pageTitle</title>

</head>
<body>

    <nav class="navbar navbar-expand-xl navbar-dark ps-2 fw-bold" style="background-color: purple;">
        <div class="container-fluid">
            <a class="navbar-brand" href="https://jiakpng.azurewebsites.net/">Jiakpng</a>
            <button type="button" class="navbar-toggler"
                    data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="~/home">Home</a>
                    </li>
                </ul>
            </div>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Translate
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <div id="google_translate_element"></div>

                                <script type="text/javascript">
                                    function googleTranslateElementInit() {
                                        new google.translate.TranslateElement({ pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE }, 'google_translate_element');
                                    }
                                </script>
                                <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
                            </li>
                        </ul>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Menu">Menu</a>
                    </li>
                        @if (User.IsInRole("User") || User.IsInRole("Admin"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button"
                               href="~/DishIden/Index" id="navbarDropdown" data-bs-toggle="dropdown">
                                Dish Identification
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item bi bi-binoculars" href="~/DishIden/Index">Dish Identification</a></li>
                                <li><a class="dropdown-item bi bi-binoculars" href="~/History/Index"> View History</a></li>
                                <li><a class="dropdown-item bi bi-binoculars" href="~/History/Summary"> Calories Summary</a></li>
                                <li><a class="dropdown-item bi bi-binoculars" href="~/History/SummaryPrice"> Price Summary</a></li>
                            </ul>
                        </li>
                        }
                        else
                        {
                        <li class="nav-item">
                            <a class="nav-link" href="~/DishIden/Index">Dish Identification</a>
                        </li>
                        }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button"
                           href="~/Reviews/Index" id="navbarDropdown" data-bs-toggle="dropdown">
                            Web Review
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item bi bi-binoculars" href="~/Reviews/Index"> Review</a></li>
                                @if (User.IsInRole("User"))
                                {
                                <li><a class="dropdown-item bi bi-binoculars" href="~/Reviews/Create"> Create Review</a></li>
                                }



                        </ul>
                    </li>
                     
                        @if (User.IsInRole("Admin"))
                        {
                            {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" role="button"
                                   href="~/Summary/UserIndex" id="navbarDropdown" data-bs-toggle="dropdown">
                                    Summary
                                </a>
                                <ul class="dropdown-menu">

                                    <li><a class="dropdown-item bi bi-binoculars" href="~/Summary/AdminIndex"> Year's Total Uploads Summary</a></li>
                                    <li><a class="dropdown-item bi bi-binoculars" href="~/Summary/AdminIndex"> Location's Top Dishes Summary</a></li>
                                    <li><a class="dropdown-item bi bi-binoculars" href="~/Summary/AdminIndex"> Review Rating Summary</a></li>
@*                                     <li><a class="dropdown-item bi bi-binoculars" href="~/Chart/Line"> Rating Summary</a></li> *@
                                </ul>
                            </li>
                            }
                        }


                        @if (User.IsInRole("User"))
                        {
                            {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" role="button"
                                   href="~/Summary/UserIndex" id="navbarDropdown" data-bs-toggle="dropdown">
                                    Summary
                                </a>
                                <ul class="dropdown-menu">

                                    <li><a class="dropdown-item bi bi-binoculars" href="~/Chart/bar"> Average Calories Summary</a></li>
                                </ul>
                            </li>
                            }
                        }
               
                    @if (User.Identity!.IsAuthenticated)
                    {
                            <li class="nav-item dropdown m-auto">
                                <a class="nav-link dropdown-toggle" role="button"
                                href="#" id="navbarDropdown" data-bs-toggle="dropdown">
                              
                             
                                 <img src="/images/defaultpp.png" class="avatar">
                           
                                    Welcome @User.Identity!.Name
                            </a>
                            <ul class="dropdown-menu" >
                                <li><a class="dropdown-item bi bi-binoculars" href="~/Account/ChangeUsername"> Change UserName</a></li>
                                <li><a class="dropdown-item bi bi-binoculars" href="~/Account/ChangePwd"> Change password</a></li>
                                <li><a class="dropdown-item bi bi-binoculars" href="~/Account/Logoff"> Logout</a></li>
                            </ul>
                        </li>

                        }
                        else
                        {
                        <li class="nav-item">
                            <a class="nav-link" href="~/Account/Login">Login/Sign Up</a>
                        </li>
                        }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid p-2">
        @RenderBody()
    </div>

</body>

@RenderSection("MoreScripts", false)
@RenderSection("Scripts", false)

@RenderSection("ScriptsSection", false)

</html>
