<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#jsMenu').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 10
            });
        });
    </script>
</head>

@model DataRowCollection

@{
    Layout = "_CaiFan";
}

<style>
    body {
        background: url('@(Url.Content("~/BG 3.jpg"))') no-repeat center center fixed;
        background-size: cover;
        font-size: small;
    }
</style>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<div class="container" style="background-color: white; border-radius: 12px;">
    <div class="row p-3">
        <h1 class="text-center mb-2">Menu</h1>
        <div style="text-align:center">
        </div>
        <table id=jsMenu class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Dish</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Lowest Price</th>
                    <th>Highest Price</th>
                    <th>Average Price</th>
                    <th>Nutrient Name</th>
                    <th>Nutritional Value</th>
                </tr>
            </thead>
            @foreach (DataRow row in Model)
            {
                <tr>
                    <td><img src="/Menu/@row["ImageData"]" width="100" height="100" /></td>
                    <td>@row["FoodName"]</td>
                    <td>@row["FoodType"]</td>
                    <td>@string.Format("{0:c}", row["LowestPrice"])</td>
                    <td>@string.Format("{0:c}", row["HighestPrice"])</td>
                    <td>@string.Format("{0:c}", row["AveragePrice"])</td>
                    <td>@row["NutrientName"]</td>
                    <td>@row["NutritionalValue"]</td>
                </tr>
            }
            </table>
        </div>
</div>
